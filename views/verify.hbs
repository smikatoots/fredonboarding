<link rel='stylesheet' href='/stylesheets/form1.css' />

<script>
window.onload = () => {
    $(document).ready(() => {
        $("#verify-submit").on("click", (event) => {
            event.preventDefault();
            $.ajax({
                url: '/verify',
                method: 'POST',
                success: function(res) {
                    $("#all").html("<div> Please check your email for further instructions!</div>")
                    console.log(res);
                    console.log("Success from verify post route!");
                },
                error: function(err) {
                    console.log("Error! ", err);
                    return "Error!"
                }
            })
        })
    })
}
</script>

<!-- <div id="form1"> -->
<div id="all">
    <h3>
        Is all this information correct?
    </h3>
    <div>{{user.primaryFirstName}} {{user.primaryMiddleName}} {{user.primaryLastName}}</div>
    <div>{{user.primaryEmail}}</div>
    <button type="button" id="verify-submit">Send email</button>
</div>
